<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <record id="view_general_configuration_account_invoice_inter_company" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='multi_company']" position='after'>
                <h2>Inter Company Invoicing</h2>
                <div class="row mt16 o_settings_container" name="inter_company">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="invoice_auto_validation"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="invoice_auto_validation"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_inter_company_products"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_inter_company_products"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</flectra>
